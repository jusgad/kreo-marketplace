# ==============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# Este archivo contiene configuración para desarrollo local
# Copiar a .env para usar: cp .env.development .env
# ==============================================================================

# ==============================================================================
# ENVIRONMENT
# ==============================================================================
NODE_ENV=development

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
POSTGRES_DB=kreo_db
POSTGRES_USER=kreo
POSTGRES_PASSWORD=kreo_dev_password
POSTGRES_PORT=5432
DATABASE_URL=postgresql://kreo:kreo_dev_password@localhost:5432/kreo_db

# ==============================================================================
# REDIS CONFIGURATION
# ==============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# ==============================================================================
# ELASTICSEARCH CONFIGURATION
# ==============================================================================
ELASTICSEARCH_PORT=9200
ELASTIC_PASSWORD=
ELASTICSEARCH_URL=http://localhost:9200

# ==============================================================================
# JWT CONFIGURATION
# ==============================================================================
# IMPORTANTE: En desarrollo estos valores son aceptables
# En producción DEBEN ser generados con: openssl rand -base64 32
JWT_ACCESS_SECRET=dev-access-secret-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Legacy support (migrar a JWT_ACCESS_SECRET)
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d

# ==============================================================================
# SESSION CONFIGURATION
# ==============================================================================
SESSION_SECRET=dev-session-secret-change-in-production

# ==============================================================================
# CORS CONFIGURATION
# ==============================================================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000

# ==============================================================================
# RATE LIMITING
# ==============================================================================
ENABLE_RATE_LIMITING=false
LOGIN_RATE_LIMIT_MAX=10
LOGIN_RATE_LIMIT_WINDOW=60
REGISTER_RATE_LIMIT_MAX=5
REGISTER_RATE_LIMIT_WINDOW=3600

# ==============================================================================
# PAYMENT SERVICES
# ==============================================================================
# Stripe (usar test keys en desarrollo)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_test_secret_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_test_key_here

# ==============================================================================
# AWS SERVICES
# ==============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_dev_access_key
AWS_SECRET_ACCESS_KEY=your_dev_secret_key
AWS_S3_BUCKET=kreo-marketplace-dev

# ==============================================================================
# EMAIL SERVICES
# ==============================================================================
# SendGrid
SENDGRID_API_KEY=your_sendgrid_dev_key
SENDGRID_FROM_EMAIL=dev@kreo.com

# ==============================================================================
# SMS SERVICES
# ==============================================================================
# Twilio
TWILIO_ACCOUNT_SID=your_twilio_dev_sid
TWILIO_AUTH_TOKEN=your_twilio_dev_token
TWILIO_PHONE_NUMBER=+1234567890

# ==============================================================================
# SHIPPING SERVICES
# ==============================================================================
SHIPPO_API_KEY=your_shippo_dev_key

# ==============================================================================
# FRONTEND URLS
# ==============================================================================
CUSTOMER_APP_URL=http://localhost:5173
VENDOR_PORTAL_URL=http://localhost:5174
CUSTOMER_APP_API_URL=http://localhost:3000/api
VENDOR_PORTAL_API_URL=http://localhost:3000/api

# ==============================================================================
# API GATEWAY
# ==============================================================================
API_GATEWAY_URL=http://localhost:3000

# ==============================================================================
# LOGGING
# ==============================================================================
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true

# ==============================================================================
# SECURITY
# ==============================================================================
IP_BLOCK_DURATION=3600
MAX_FAILED_ATTEMPTS=10
ENABLE_2FA=false
